<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.traveler.web.diary.mapper.ReplyMapper">

<!-- 댓글 조회 -->
	<select id="viewReply" resultType="com.traveler.web.diary.model.ReplyVO">
    	SELECT
    		  DIARY_NO, CONTENT, WRITER, REGDATE
    	 FROM DIARY_REPLY
    	WHERE DIARY_NO = #{diary_no}
	</select>
	
	
	<!--  댓글 작성 -->
	
	<insert id="writeReply">
	
	INSERT INTO DIARY_REPLY(DIARY_NO,CONTENT,WRITER) 
	VALUES (#{diary_no},#{content},#{writer})
	
	</insert>

</mapper>