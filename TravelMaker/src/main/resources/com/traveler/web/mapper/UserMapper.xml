<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.traveler.web.mapper.UserMapper"> 
	<!--회원가입 -->
	<insert id = "insertUser">
		insert into tbl_member values(#{no}
		, #{id}
		, #{password}
		, #{name}
		)
	</insert>
	<!-- 아이디 중복검사 -->
	<select id = "idCheck" resultType="int">
		select count(*) from tbl_member where id = #{id}
	</select>
	<!-- 로그인 -->
	<select id = "userLogin" resultType="com.traveler.web.model.UserVO">
		select id, name from tbl_member where id = #{id} and password = #{password}
	</select>
</mapper>
